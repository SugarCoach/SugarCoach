<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="5dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="10dp">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/bg"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/base_puntos_alpha" />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                        android:text="@string/congratulation_label"
                        style="@style/TextStyle.Heading"
                        android:gravity="center"
                        android:textSize="60dp"
                        android:shadowColor="@color/blue"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:layout_marginTop="10dp"
                        android:shadowRadius="1"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                        android:text="100"
                        android:id="@+id/congratulation_pts_txt"
                        style="@style/TextStyle.Heading"
                        android:layout_gravity="center"
                        android:textSize="65dp"
                        android:shadowColor="@color/blue"
                        android:shadowDx="2"
                        android:layout_marginTop="10dp"
                        android:shadowDy="2"
                        android:shadowRadius="1"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatTextView
                        android:text="@string/register_pts_txt"
                        style="@style/TextStyle.Heading"
                        android:layout_gravity="center"
                        android:textSize="25dp"
                        android:shadowColor="@color/blue"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:layout_marginTop="-10dp"
                        android:shadowRadius="1"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <androidx.cardview.widget.CardView
                        android:id="@+id/cardView2"
                        android:layout_width="98dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        app:cardBackgroundColor="@color/blue"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp"
                        app:layout_constraintBottom_toTopOf="@+id/register_ptsText_txt"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/congratulation_pts_total_txt"
                                style="@style/TextStyle.Heading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="1800"
                                android:textSize="18dp" />

                        <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextStyle.Heading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/congratulation_pts_label"
                                android:textSize="12dp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextStyle.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:text="@string/congratulation_nivel_label"
                        android:textSize="16dp" />
                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/congratulation_level_txt"
                        style="@style/TextStyle.Heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:shadowColor="@color/blue"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="1"
                        android:text="@string/congratulation_nivel_label"
                        android:textSize="30dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/congratulation_avatar"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_user_nophoto"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="3dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
    <ImageView
            android:id="@+id/congratulation_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:elevation="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            app:srcCompat="@drawable/close" />

</FrameLayout>