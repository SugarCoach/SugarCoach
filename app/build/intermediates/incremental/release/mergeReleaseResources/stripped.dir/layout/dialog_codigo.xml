<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
            android:layout_width="307dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="5dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="10dp"
            android:visibility="visible">
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_height="match_parent">
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextStyle.Heading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/premium_title"
                        android:textColor="@color/blue"
                        android:textSize="15dp" />
                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="20dp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_height="20dp"
                        android:layout_marginRight="40dp"
                        app:srcCompat="@drawable/ic_upgrade"/>
            </FrameLayout>

            <androidx.appcompat.widget.AppCompatEditText
                    android:hint="@string/premium_hint"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:textColor="@color/blue"
                    android:textColorHighlight="@color/blue"
                    android:textColorHint="@color/gray"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/premium_value"/>
            <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyle.Heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:linksClickable="true"
                    android:layout_marginTop="5dp"
                    android:text="@string/premium_message"
                    android:textColor="@color/gray_letter"
                    android:textSize="12dp" />

            <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyle.Heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:linksClickable="true"
                    android:id="@+id/premium_url"
                    android:text="@string/premium_url"
                    android:textColor="@color/gray_letter"
                    android:textSize="12dp" />

            <Button
                    android:id="@+id/premium_save"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="30dp"
                    android:backgroundTint="@color/blue"
                    android:text="@string/accept_txt"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>