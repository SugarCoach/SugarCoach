<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_margin="10dp"
              android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/white">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:id="@+id/daily_statistics_item_ll"
                      android:paddingBottom="5dp"
                      android:paddingTop="5dp"
                      android:layout_height="match_parent" android:padding="5dp">


            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/statistics_item_title"
                        style="@style/TextStyle.Heading"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.50"
                        android:gravity="center"
                        android:text="@string/daily_detail_gluc"
                        android:textColor="@color/yellow"
                        android:textSize="16dp" />
                <com.skydoves.powerspinner.PowerSpinnerView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:padding="10dp"
                        android:textColor="@color/gray_letter"
                        android:textSize="14.5sp"
                        app:spinner_arrow_gravity="end"
                        app:spinner_arrow_tint="@color/gray"
                        app:spinner_arrow_padding="8dp"
                        app:spinner_divider_color="@color/gray"
                        app:spinner_divider_show="true"
                        app:spinner_divider_size="0.4dp"
                        app:spinner_popup_animation="dropdown"
                        app:spinner_popup_background="@color/white"
                        app:spinner_popup_elevation="14dp" android:layout_weight="0.50"
                        android:id="@+id/statistics_item_types"/>

                <com.skydoves.powerspinner.PowerSpinnerView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:padding="10dp"
                        android:textColor="@color/gray_letter"
                        android:textSize="14.5sp"
                        app:spinner_arrow_gravity="end"
                        app:spinner_arrow_tint="@color/gray"
                        app:spinner_arrow_padding="8dp"
                        app:spinner_divider_color="@color/gray"
                        app:spinner_divider_show="true"
                        app:spinner_divider_size="0.4dp"
                        app:spinner_popup_animation="dropdown"
                        android:visibility="gone"
                        app:spinner_popup_background="@color/white"
                        app:spinner_popup_elevation="14dp" android:layout_weight="0.50"
                        android:id="@+id/statistics_item_types_insulina"/>
                <com.skydoves.powerspinner.PowerSpinnerView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:padding="10dp"
                        android:textColor="@color/gray_letter"
                        android:textSize="14.5sp"
                        app:spinner_arrow_gravity="end"
                        app:spinner_arrow_tint="@color/gray"
                        app:spinner_arrow_padding="8dp"
                        app:spinner_divider_color="@color/gray"
                        app:spinner_divider_show="true"
                        app:spinner_divider_size="0.4dp"
                        app:spinner_popup_animation="dropdown"
                        android:visibility="gone"
                        app:spinner_popup_background="@color/white"
                        app:spinner_popup_elevation="14dp" android:layout_weight="0.50"
                        android:id="@+id/statistics_item_types_car"/>
                <com.skydoves.powerspinner.PowerSpinnerView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:padding="10dp"
                        android:textColor="@color/gray_letter"
                        android:textSize="14.5sp"
                        app:spinner_arrow_gravity="end"
                        app:spinner_arrow_tint="@color/gray"
                        app:spinner_arrow_padding="8dp"
                        app:spinner_divider_color="@color/gray"
                        app:spinner_divider_show="true"
                        app:spinner_divider_size="0.4dp"
                        app:spinner_popup_animation="dropdown"
                        android:visibility="gone"
                        app:spinner_popup_background="@color/white"
                        app:spinner_popup_elevation="14dp" android:layout_weight="0.50"
                        android:id="@+id/statistics_item_types_state"/>
                <com.skydoves.powerspinner.PowerSpinnerView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:padding="10dp"
                        android:textColor="@color/gray_letter"
                        android:textSize="14.5sp"
                        app:spinner_arrow_gravity="end"
                        app:spinner_arrow_tint="@color/gray"
                        app:spinner_arrow_padding="8dp"
                        app:spinner_divider_color="@color/gray"
                        app:spinner_divider_show="true"
                        app:spinner_divider_size="0.4dp"
                        app:spinner_popup_animation="dropdown"
                        android:visibility="gone"
                        app:spinner_popup_background="@color/white"
                        app:spinner_popup_elevation="14dp" android:layout_weight="0.50"
                        android:id="@+id/statistics_item_types_exercise"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    app:cardBackgroundColor="@color/blue"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    app:cardPreventCornerOverlap="true"
                    android:layout_height="70dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@+id/daily_date_txt"
                    app:layout_constraintEnd_toStartOf="@+id/daily_time_txt"
                    app:layout_constraintTop_toBottomOf="@+id/daily_date_txt"
                    android:layout_gravity="right" android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp">

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:visibility="gone"
                        android:id="@+id/statistics_item_date_layout"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">
                    <androidx.appcompat.widget.AppCompatTextView
                            android:text="@string/daily_detail_date"
                            style="@style/TextStyle.Heading"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16dp" android:gravity="center"/>
                    <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextStyle.Heading"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="22dp" android:gravity="center"
                            android:id="@+id/statistics_item_date_tv" android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/statistics_item_barchart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"/>
            <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/statistics_item_piechart"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>