<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_gravity="center"
              android:layout_height="match_parent"
              android:gravity="center">

    <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_gravity="center">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:gravity="center_horizontal"
                          android:id="@+id/linearLayout3"
                          android:layout_gravity="center"
                          android:layout_margin="10dp">
                <FrameLayout
                        android:layout_width="180dp"
                        android:layout_height="180dp">

                    <ImageView
                            android:layout_width="match_parent"
                            app:srcCompat="@drawable/planet_glucemia"
                            android:id="@+id/register_planet"
                            android:layout_gravity="center"
                            android:visibility="visible"
                            android:scaleType="centerCrop"
                            android:layout_height="match_parent"/>
                    <TextView
                            android:text="18.9"
                            style="@style/TextStyle.Heading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/register_value"
                            android:textSize="26dp"
                            android:textColor="@color/white"
                            android:padding="10dp"
                            android:visibility="gone"
                            android:layout_gravity="center"
                            android:gravity="center"/>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:id="@+id/register_unidad"
                            android:layout_height="match_parent">
                        <androidx.appcompat.widget.AppCompatTextView
                                android:text="@string/register_new_register_txt"
                                style="@style/TextStyle.Heading"
                                android:layout_gravity="center"
                                android:textSize="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/register_unidad_tv"/>
                        <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="30dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/ic_hand"
                                android:layout_marginTop="2dp"/>
                    </LinearLayout>

                </FrameLayout>
                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_height="match_parent">

                    <TextView
                            android:text="@string/main_glucemia_txt"
                            style="@style/TextStyle.Heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/register_type"
                            android:textSize="14dp"
                            android:background="@drawable/button_blue"
                            android:textColor="@color/white"
                            android:padding="10dp" android:layout_gravity="center"/>
                </FrameLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </FrameLayout>

</LinearLayout>