<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:background="@color/white"
              android:fitsSystemWindows="true"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/constraintLayout">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/space_bg"
                android:id="@+id/bg"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toTopOf="@+id/guideline"/>

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/planet"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/planet_estado" />
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/linearLayout">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:background="@color/aqua"
                    android:layout_height="64dp"
                    android:id="@+id/daily_home"
                    android:layout_weight="0.20">
                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ic_profile"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:id="@+id/daily_statistics"
                    android:layout_gravity="bottom"
                    android:background="@color/aqua"
                    android:layout_height="64dp"
                    android:layout_weight="0.20">
                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ic_statistics"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_gravity="bottom"
                    android:background="@color/aqua"
                    android:gravity="center"
                    android:layout_height="64dp"
                    android:layout_weight="0.20">
                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="33dp">
                    <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/bold_shape"/>
                    <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:tint="@color/aqua"
                            app:srcCompat="@drawable/ic_add_register" />
                </FrameLayout>

                <TextView
                        style="@style/TextStyle.Title"
                        android:textSize="10dp"
                        android:layout_gravity="center"
                        android:text="@string/main_daily_register_txt"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:background="@color/aqua"
                    android:id="@+id/daily_register"
                    android:layout_height="64dp"
                    android:layout_weight="0.20">
                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="38dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ic_control"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:background="@color/aqua"
                    android:id="@+id/daily_tratamiento"
                    android:layout_height="64dp"
                    android:layout_weight="0.20">
                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ic_treatment"/>
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/daily_pdf_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="75dp"
                android:backgroundTint="@color/aqua"
                android:clickable="true"
                app:borderWidth="0dp"
                app:elevation="5dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/share" />

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="80dp"
                style="@style/TextStyle.Date"
                android:gravity="center"
                android:layout_height="43dp"
                android:id="@+id/daily_date_txt"
                android:background="@drawable/date_right_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                style="@style/TextStyle.Date"
                android:gravity="center"
                android:layout_height="43dp"
                android:id="@+id/daily_time_txt"
                android:minWidth="80dp"
                android:paddingLeft="5dp"
                android:background="@drawable/date_left_bg"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.40"/>
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user_nophoto"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp"
                android:id="@+id/daily_userimg_iv"
                app:layout_constraintBottom_toTopOf="@+id/daily_username_txt"
                app:layout_constraintStart_toStartOf="@+id/daily_username_txt"
                app:layout_constraintEnd_toEndOf="@+id/daily_username_txt"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/daily_username_txt"
                style="@style/TextStyle.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginBottom="75dp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/guideline"
                app:layout_constraintLeft_toLeftOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/daily_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="24dp"
                android:visibility="invisible"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/daily_username_txt" />

        <FrameLayout
                android:id="@+id/loading"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/daily_username_txt">

            <ProgressBar
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:indeterminateTint="@color/aqua" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>